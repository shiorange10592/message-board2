<%= form_for(@message) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="name", class="col-sm-1 control-label">名前</label>
    <div class="col-sm-3">
      <%= f.text_field :name, :id => "name", :class => "form-control" %>
    </div>
  </div>

    <div class="form-group">
      <label for="content"  class="col-sm-1 control-label">内容:</label>
      <div class="col-sm-3">
        <%= f.text_area :body, :maxlength => "40", :size => "30x2", :id => "content", :class => "form-control" %> 
      </div>
    </div>
  <%= f.submit %>
<% end %>

